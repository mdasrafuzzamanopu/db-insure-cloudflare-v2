{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "sanity.config.js",
    "pages/admin/[[...slug]]/index.js",
    "sanity/schemas/index.js",
    "sanity/schemas/project.js",
    "sanity/schemas/person.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
